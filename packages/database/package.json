{
  "name": "@repo/database",
  "version": "0.0.0",
  "exports": {
    ".": "./src/client.ts"
  },
  "scripts": {
    "db:migrate:deploy": "dotenv -e .env.production.local -- prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/seed.ts",

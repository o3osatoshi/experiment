    "studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.12",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.7.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3"
  },
  "prisma": {
    "schema": "./prisma"
  }
}
